# PMCell WooCommerce - Configurações de Ambiente
# Copie este arquivo para .env e preencha com suas credenciais

# WordPress
WP_HOME=http://localhost:8080
WP_SITEURL=http://localhost:8080
WP_DEBUG=false
WP_DEBUG_LOG=false

# Mercado Pago (obter em: https://www.mercadopago.com.br/developers/panel/app)
MP_PUBLIC_KEY=your_public_key_here
MP_ACCESS_TOKEN=your_access_token_here
MP_ENVIRONMENT=production
# Para testes, use: MP_ENVIRONMENT=sandbox

# Melhor Envio (obter em: https://melhorenvio.com.br/painel)
ME_TOKEN=your_melhor_envio_token_here
ME_USER_ID=your_user_id_here
ME_COMPANY_ID=your_company_id_here
ME_ENVIRONMENT=production
# Para testes, use: ME_ENVIRONMENT=sandbox

# Configurações da Loja
STORE_NAME=PMCell São Paulo
STORE_EMAIL=contato@pmcell.com.br
STORE_PHONE=(11) 99999-9999
STORE_ADDRESS=Rua Exemplo, 123
STORE_CITY=São Paulo
STORE_STATE=SP
STORE_POSTCODE=01310-100

# Configurações de Frete
FREE_SHIPPING_MINIMUM=199.00
HANDLING_FEE=0.00
ADDITIONAL_SHIPPING_DAYS=2

# Configurações de Segurança
FORCE_SSL=true
DISABLE_XMLRPC=true
LIMIT_LOGIN_ATTEMPTS=5

# Configurações de Performance
ENABLE_CACHE=true
CACHE_TIMEOUT=3600
OPTIMIZE_IMAGES=true

# Configurações de Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls

# Configurações do Google Analytics (opcional)
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# Configurações do Facebook Pixel (opcional)
FACEBOOK_PIXEL_ID=